<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Itogi.Windows.pochta"
        Title="Почта"
        Topmost="True"
        Height="300"
        Width="500">
    <Grid>
        <Grid Background="LightPink">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel x:Name="textPanel" Grid.Column="0" VerticalAlignment="Center">
                <Border Background="#42AAFF" Margin="5 7 0 0" HorizontalAlignment="Left" CornerRadius="10" Height="30" BorderBrush="Black" BorderThickness="0.6">
                    <TextBlock Name="message" VerticalAlignment="Center" Padding="5 0 0 0 "></TextBlock>
                </Border>
            </StackPanel>

            <Image x:Name="imagePanel" Grid.Column="1" Stretch="UniformToFill" />
        </Grid>

        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="10">
            <Button Content="Кнопка 1" Click="Button1_Click" />
            <Button Content="Кнопка 2" Click="Button2_Click" />
        </StackPanel>
    </Grid>
</Window>
