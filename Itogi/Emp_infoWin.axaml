<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Itogi.Emp_infoWin"
        Title="Информация о сотрудниках">
<DataGrid x:Name="InfoGrid"
          AutoGenerateColumns="False"
          IsReadOnly="True"
          GridLinesVisibility="All"
          BorderThickness="1"
          BorderBrush="Gray"
          Margin="7,20"
          MinHeight="200"
          x:CompileBindings="False">
    <DataGrid.Columns>
        <DataGridTextColumn Header="Сотрудник" Binding="{Binding Employee}"></DataGridTextColumn>
        <DataGridTextColumn Header="Должность" Binding="{Binding Post}"></DataGridTextColumn>
        <DataGridTextColumn Header="Отдел" Binding="{Binding Department}"></DataGridTextColumn>
        <DataGridTextColumn Header="Ставка" Binding="{Binding Working_rate}"></DataGridTextColumn>
        <DataGridTextColumn Header="Часы работы (в месяц)" Binding="{Binding Working_hours}"></DataGridTextColumn>
        <DataGridTextColumn Header="Зарабатная плата" Binding="{Binding Salary}"></DataGridTextColumn>
    </DataGrid.Columns>
</DataGrid>    
</Window>
